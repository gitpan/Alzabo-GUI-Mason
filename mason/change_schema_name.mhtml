<%args>
$schema
$name
</%args>

<%init>
my ($s);
eval
{
    $s = Alzabo::Create::Schema->load_from_file( name => $schema );

    $s->set_name($name);
    $s->save_to_file;
};

my $e = $@;

$m->comp( 'handle_rules_exception', e => $e, comp => 'view_schema', %ARGS );

$m->comp( 'exception', $e ) if $e;

$m->comp( 'redirect', url => 'view_schema' . Alzabo::GUI::Mason::Config::mason_extension() . '?schema=' . $s->name );

</%init>

<%flags>
inherit => 'syshandler'
</%flags>
