<%args>
$e
$comp
</%args>

<%init>
delete @ARGS{ 'e', 'comp' };

if ( $e && UNIVERSAL::isa( $e, 'Alzabo::Exception::RDBMSRules' ) )
{
    warn $e;

    $m->comp( 'redirect',
	      url => $m->comp( 'make_url',
			       path => $comp . Alzabo::GUI::Mason::Config::mason_extension(),
			       query => { errors => $e->error, %ARGS } ) );
}
</%init>